<div class="container"><%= render 'homes/errors', error_item: @worker %>
    <div class="row">
        <div class="col-4">
            <p class="mx-4"><%= link_to "戻る", shifts_path, class:"btn btn-primary", role:"button" %></p>
            <div class="form-group form-inline mx-4 p-4 border d-flex justify-content-center">
                <%= form_with model: @worker do |f| %>
                    <h4 class="text-center">スタッフ新規登録</h4>
                    <p>名前 <%= f.text_field :name, class:"form-control", placeholder: "4文字以内" %></p>
                    <button type="submit" class="btn btn-info btn-block">登録</button>
                <% end %>
            </div>
        </div>
        <div class="col-8">
            <% @workers.each do |worker| %>
                    <%= form_with model: worker do |f| %>
                        <div class="m-2">
                            <%= f.text_field :name %>
                            <button type="submit" class="btn btn-success">変更</button>
                            <span><%= link_to "削除", worker_path(worker.id), method: :delete, class: "btn btn-danger", role:"button" %></span>
                        </div>
                    <% end %>
            <% end %>
        </div>
    </div>
</div>
<div class="d-flex justify-content-center"><%= paginate @workers %></div>