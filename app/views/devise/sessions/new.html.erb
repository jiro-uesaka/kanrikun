<div class="container">
    <div class="row d-flex flex-column justify-content-center text-center m-3 p-3">
        <h2>ログイン</h2>

        <%= form_with model: @shop, url: shop_session_path do |f| %>
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="field">
            <%= f.label :password, "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        
          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>
        <% end %>
        
        <%= link_to "新規登録", new_shop_registration_path %>
    </div>
</div>