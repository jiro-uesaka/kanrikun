<div class="container">
    <div class="row d-flex flex-column justify-content-center text-center m-3 p-3">
        <h2>登録情報変更</h2>

        <%= form_with model: @shop, url: shop_registration_path do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          
          <div class="field">
            <%= f.label :name, "店舗名" %><br>
            <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
          </div>
        
          <div class="field">
            <%= f.label :email, "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
        
          <div class="field">
            <%= f.label :password, "パスワード" %> <i>(変更したくない場合は空欄にしてください)</i><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> 文字以上</em>
            <% end %>
          </div>
        
          <div class="field">
            <%= f.label :password_confirmation, "パスワード(確認)" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        
          <div class="field">
            <%= f.label :current_password, "現在のパスワード" %> <i>(登録情報変更にはパスワードの入力が必要です)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>
        
          <div class="actions mt-2">
            <%= f.submit "変更" %>
          </div>
        <% end %>
        
        <h3>退会する</h3>
        
        <p>退会すると、登録したデータが全て削除されます <%= button_to "退会する", registration_path(resource_name), data: { confirm: "本当によろしいですか？" }, method: :delete %></p>
        
        <%= link_to "戻る", menu_path %>
    </div>
</div>