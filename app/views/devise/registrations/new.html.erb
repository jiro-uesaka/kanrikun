<div class="container">
    <div class="row d-flex flex-column justify-content-center text-center m-3 p-3">
      <h2>新規登録</h2>
  
      <%= form_with model: @shop, url: shop_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="field">
          <%= f.label :name, "店舗名" %><br>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>
        
        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
      
        <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      
        <div class="actions mt-2">
          <%= f.submit "新規登録" %>
        </div>
      <% end %>
      <%= link_to "ログイン", new_shop_session_path %>
    </div>
</div>