<div class="container">
    <div class="row d-flex justify-content-center">
        <% if error_item.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= error_item.errors.count %>件のエラーが発生しました
            </h6>
            <% error_item.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
    </div>
</div>